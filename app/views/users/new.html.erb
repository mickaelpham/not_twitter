<%= form_for @user, url: register_path, html: { class: 'register-form' } do |f| %>
  <div class="row">
    <div class="one-third column">
      <% if @user.errors.any? %>
        <h5>Form is invalid</h5>

        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'u-full-width', placeholder: 'how you introduce yourself', autofocus: true %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'u-full-width', placeholder: 'won\'t be shared' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'u-full-width', placeholder: 'the longer the better' %>

      <%= f.submit 'Register now', class: 'button-primary' %>
    </div>

    <div class="two-thirds column">
      <h2>Welcome to Twitter.</h2>

      <p>
        Connect with your friends â€” and other fascinating people. Get
        in-the-moment updates on the things that interest you. And watch events
        unfold, in real time, from every angle.
      </p>
    </div>
  </div>
<% end %>
